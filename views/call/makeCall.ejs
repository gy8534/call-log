<%- include('../header') %>
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Make a Call</h1>
  </div>
</div>

<div class="card-body">
  <form
    class="form"
    role="form"
    autocomplete="off"
    id="formLogin"
    novalidate=""
    method="POST"
  >
    <div class="form-group">
        <label>Contact Number</label>
      <input type="number" name="contact" class="form-control form-control-lg rounded-0" list="languages" />
      <datalist id="languages">
        <% contacts.forEach((contact) => {%>
          <option value="<%= contact.contact%>"><%= contact.name%></option>
          <%})%>
      </datalist>
    </div>

    <div class="form-group">
        <label>Duration</label>
      <input type="text" name="duration" class="form-control form-control-lg rounded-0"/>
    </div>
    <div class="form-group">
        <label>Sim</label>
        <select name="sim" id="sim">
            <option value="9511432646">1</option>
            <option value="9568361163">2</option>
          </select>
    </div>
    <button
      type="submit"
      class="btn btn-success btn-lg float-right"
      id="btnLogin"
    >
      Make Call
    </button>
  </form>
</div>